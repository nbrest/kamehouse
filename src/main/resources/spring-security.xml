<beans:beans xmlns="http://www.springframework.org/schema/security"
	xmlns:beans="http://www.springframework.org/schema/beans" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
	http://www.springframework.org/schema/security
	http://www.springframework.org/schema/security/spring-security-4.2.xsd">

	<http auto-config="true">
		<intercept-url pattern="/admin/**" access="hasRole('ROLE_ADMIN')" method="GET"/>
    
    <intercept-url pattern="/api/v1/admin/**" access="permitAll" method="GET"/>
    <intercept-url pattern="/api/v1/admin/**" access="hasRole('ROLE_ADMIN')" method="POST"/>
    <intercept-url pattern="/api/v1/admin/**" access="hasRole('ROLE_ADMIN')" method="PUT"/>
    <intercept-url pattern="/api/v1/admin/**" access="hasRole('ROLE_ADMIN')" method="DELETE"/>

    <intercept-url pattern="/api/v1/dragonball/**" access="permitAll" method="GET"/>
    <intercept-url pattern="/api/v1/dragonball/**" access="hasRole('ROLE_USER')" method="POST"/>
    <intercept-url pattern="/api/v1/dragonball/**" access="hasRole('ROLE_USER')" method="PUT"/>
    <intercept-url pattern="/api/v1/dragonball/**" access="hasRole('ROLE_USER')" method="DELETE"/>

    <intercept-url pattern="/jsp/dragonball/users/**" access="permitAll" method="GET"/>
    <intercept-url pattern="/jsp/dragonball/users/**" access="hasRole('ROLE_USER')" method="POST"/>
    <intercept-url pattern="/jsp/dragonball/users/**" access="hasRole('ROLE_USER')" method="PUT"/>
    <intercept-url pattern="/jsp/dragonball/users/**" access="hasRole('ROLE_USER')" method="DELETE"/>
        
    <form-login login-page="/login" username-parameter="ssoId" password-parameter="password"/>
    <csrf disabled="true"/> 
	</http>

	<authentication-manager>
		<authentication-provider>
			<user-service>
				<user name="admin" password="admin" authorities="ROLE_ADMIN" />
        <user name="user" password="user" authorities="ROLE_USER" />
        <user name="super-user" password="super-user" authorities="ROLE_ADMIN,ROLE_USER,ROLE_GUEST" />
        <user name="guest" password="guest" authorities="ROLE_GUEST" />
			</user-service>
		</authentication-provider>
	</authentication-manager>

</beans:beans>