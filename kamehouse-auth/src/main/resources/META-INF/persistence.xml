<persistence xmlns="http://java.sun.com/xml/ns/persistence"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
  version="2.0">
  <!-- Configured completely in the datasource.xml -->
  <persistence-unit name="kamehouse"
    transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    <class>com.nicobrest.kamehouse.commons.model.KameHouseUser</class>
    <class>com.nicobrest.kamehouse.commons.model.KameHouseRole</class>
  </persistence-unit>
</persistence>